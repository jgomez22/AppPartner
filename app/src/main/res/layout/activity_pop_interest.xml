<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.PopInterestActivity" android:background="@color/colorRed">

    <Button
            android:text="Agregar"
            android:layout_width="100dp"
            android:layout_height="35dp" android:id="@+id/btnAddInt"
            android:background="@drawable/btn_corner_white" android:textAllCaps="false"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout3">
        <CheckBox
                android:text="Estudios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox2" android:checked="true"/>
        <CheckBox
                android:text="Conciertos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox3" android:checked="true"/>
        <CheckBox
                android:text="Cine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox4" android:checked="true"/>
        <CheckBox
                android:text="Salir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox5" android:checked="true"/>
        <CheckBox
                android:text="Deportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox6" android:checked="true"/>
        <CheckBox
                android:text="Viajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox7" android:checked="true"/>
        <CheckBox
                android:text="Otros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox8" android:checked="true"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>