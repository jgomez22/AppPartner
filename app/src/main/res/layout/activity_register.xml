<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.RegisterActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:id="@+id/linearLayout2"
            android:layout_marginTop="10dp">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgPerfilRe" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_user">
        </ImageView>
        <TextView
                android:text="Subir Foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:gravity="center"
                android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/txtNombreRe" android:background="@null" android:layout_marginLeft="20dp"
                android:hint="Nombre" android:textColorHint="@android:color/black"
                android:inputType="text" android:gravity="center_vertical"/>
        <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginLeft="15dp" android:id="@+id/view"/>
        <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/txtCorreoRe" android:background="@null" android:layout_marginLeft="20dp"
                android:hint="Correo" android:textColorHint="@android:color/black"
                android:inputType="textEmailAddress" android:gravity="center_vertical"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginLeft="15dp" android:id="@+id/view2"/>
        <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtPasswordRe" android:background="@null" android:layout_marginLeft="20dp"
                android:hint="ContraseÃ±a" android:textColorHint="@android:color/black"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginLeft="15dp" android:id="@+id/view4"/>
        <Spinner
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:entries="@array/sede_array"
                android:id="@+id/spCampus"
                android:layout_marginLeft="20dp"/>
        <Spinner
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:entries="@array/career_array"
                android:id="@+id/spCareer"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="Agregar Interes"
                android:layout_width="200dp"
                android:layout_height="45dp" android:id="@+id/btnAddInterest"
                android:background="@drawable/btn_corner_red" android:layout_marginLeft="20dp"
                android:textColor="@color/colorWhite" android:textAllCaps="false" android:textSize="18sp"/>
    </LinearLayout>
    <Button
            android:text="Completar Registro"
            android:layout_width="300dp"
            android:layout_height="45dp" android:id="@+id/btnRegistrar"
            android:background="@drawable/btn_corner_red" android:textAllCaps="false" android:textSize="18sp"
            android:textColor="@android:color/background_light" android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>