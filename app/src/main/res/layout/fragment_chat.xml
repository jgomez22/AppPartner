<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="viewModel"
                type="com.mobile.apppartner.ui.chat.UserMatchListViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/user_match_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:adapter="@{viewModel.getUserMatchListAdapter()}"
                android:overScrollMode="never"/>

        <Button
          android:text="CHATEAR"
          android:layout_width="300dp"
          android:layout_height="45dp" android:id="@+id/btnChat"
          android:background="@drawable/btn_corner_red" android:textAllCaps="false" android:textSize="18sp"
          android:textColor="@android:color/background_light" android:gravity="center"
          android:layout_marginStart="8dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
          android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>
</layout>